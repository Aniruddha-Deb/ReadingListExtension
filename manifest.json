{
    "manifest_version": 2,
    "name": "Reading List Extension",
    "version": "1.0",
    "description": "simple reading list Extension",

    "permissions": ["storage", "contextMenus"],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    }
}